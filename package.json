{
    "name": "telegram-clone",
    "version": "1.0.0",
    "description": "Telegram clone with React and Node.js",
    "scripts": {
        "install-all": "cd server && npm install && cd ../client && npm install",
        "build": "cd server && npm install",
        "start": "cd server && node server.js",
        "start-server": "npm start --prefix server",
        "start-client": "npm start --prefix client",
        "dev": "concurrently \"npm run start-server\" \"npm run start-client\""
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-validator": "^7.0.1",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^7.5.0",
        "multer": "^2.0.2",
        "socket.io": "^4.7.2",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "concurrently": "^7.6.0",
        "nodemon": "^3.0.1"
    }
}